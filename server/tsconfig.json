{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "public",
      "**/*.spec.ts"
    ]
}